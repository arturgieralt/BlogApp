{
  "compilerOptions": {
    "target": "es5",                         
    "module": "commonjs",                    
    "lib": ["es6","dom"],                    
    "sourceMap": true,                    
    "outDir": "build",                         
    "rootDir": "src",                        
    "strict": true,                          
    "moduleResolution": "node",           
    "baseUrl": "./src",                      
    "esModuleInterop": true                  
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
{
    "name": "nodeRT",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "start": "npm run build:live",
        "build": "tsc -p .",
        "build:live": "npx nodemon --watch 'src/**/*.ts' --exec npm run watch",
        "watch": "npx ts-node src/server.ts",
        "start:prod": "nodemon ./build/server.js",
        "prod": "npm run build && npm run start",
        "prettier:base": "prettier --parser typescript --single-quote",
        "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
        "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
        "test": "ts-mocha -p tsconfig.json src/**/*.test.ts",
        "test-coverage": "nyc ts-mocha -p tsconfig.json src/**/*.test.ts"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts",
            "**/*.test.ts",
            "**/testSetup"
        ],
        "reporter": [
            "html"
        ],
        "all": true
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.1.7",
        "@types/cors": "^2.8.5",
        "@types/express": "^4.17.0",
        "@types/express-validator": "^3.0.0",
        "@types/mocha": "^5.2.7",
        "@types/mocha-each": "^1.1.0",
        "@types/mongoose": "^5.5.8",
        "@types/multer": "^1.3.7",
        "@types/node": "^10.14.12",
        "@types/nodemailer": "^4.6.8",
        "@types/passport": "^1.0.0",
        "@types/passport-jwt": "^3.0.1",
        "@types/passport-local": "^1.0.33",
        "@types/sinon": "^7.0.13",
        "@types/socket.io": "^2.1.2",
        "@typescript-eslint/eslint-plugin": "^1.12.0",
        "@typescript-eslint/parser": "^1.12.0",
        "chai": "^4.2.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-prettier": "^3.1.0",
        "mocha": "^6.1.4",
        "mocha-each": "^1.2.0",
        "mongodb-memory-server": "^5.1.5",
        "nodemon": "^1.19.1",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2",
        "sinon": "^7.3.2",
        "source-map-support": "^0.5.12",
        "ts-mocha": "^6.0.0",
        "ts-node": "^7.0.1",
        "ts-sinon": "^1.0.17",
        "tslint": "^5.18.0",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^6.2.0",
        "envalid": "^5.0.0",
        "express": "^4.17.1",
        "express-validator": "^5.3.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.6.4",
        "multer": "^1.4.2",
        "nodemailer": "^6.3.0",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "socket.io": "^2.2.0"
    }
}
